# Dockerfile.web
# Stage 1: build with Maven (uses Java 17 build image)
FROM maven:3.9.4-eclipse-temurin-17 AS build
WORKDIR /build
COPY pom.xml .
COPY src ./src
RUN mvn -B -DskipTests package

# Stage 2: runtime (Java 17)
FROM eclipse-temurin:17-jre
WORKDIR /app
# copy the built jar (adjust glob if artifactId/version differs)
COPY --from=build /build/target/*-SNAPSHOT.jar app.jar
EXPOSE 8080
ENTRYPOINT ["java", "-jar", "/app/app.jar"]
